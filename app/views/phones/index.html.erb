<div class="basic-grey">
  <p id="notice"><%= notice %></p>

  <h1>Listing Phones</h1>

  <table>
    <thead>
      <tr>
        <th><%= @phones.model.human_attribute_name("phone")%></th>
        <th><%= @phones.model.human_attribute_name("contact")%></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @phones.each do |phone| %>
        <tr style="background-color: <%= cycle("#FFFFFF", "#bcc6d6")%>">
          <td style="color: #000; font-weight: bold"><%= phone.phone %></td>
          <td style="color: #000; font-weight: bold"><%= phone.contact.name %></td>
          <td><%= link_to 'Show', phone %></td>
          <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
          <td><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Phone', new_phone_path %>
</div>