<div class="basic-grey">
  <p id="notice"><%= notice %></p>

  <h1>Listing Addresses</h1>

  <table>
    <thead>
      <tr>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Contact</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
        <tr style="background: <%= cycle("#FFFFFF", "#bcc6d6")%>">
          <td style="color: #000"><b><%= address.street %></b></td>
          <td style="color: #000"><b><%= address.city %></b></td>
          <td style="color: #000"><b><%= address.state %></b></td>
          <td style="color: #000"><b><%= address.contact.name %></b></td>
          <td><%= link_to 'Show', address %></td>
          <td><%= link_to 'Edit', edit_address_path(address) %></td>
          <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Address', new_address_path %>
</div>